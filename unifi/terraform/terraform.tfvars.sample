# Copy this file to terraform.tfvars and update with your values

# Unifi Controller connection details
# unifi_username       = "admin"
# unifi_password       = "your-password-here"
unifi_api_key        = "abc123"
unifi_api_url        = "https://192.168.1.1:8443"
unifi_allow_insecure = true # Set to true if using self-signed certificates

# Site configuration
site = "default" # Usually "default" unless you have multiple sites