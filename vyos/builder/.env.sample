# VyOS Builder Environment Configuration

# Build Configuration
BUILD_BY="your-email@domain.com"
BUILD_ARCHITECTURE="amd64"
BUILD_TYPE="generic"
BUILD_BRANCH="current"

# Docker Configuration
VYOS_BUILD_CONTAINER="vyos/vyos-build:current"
DOCKER_PRIVILEGED="true"

# Output Configuration
KEEP_BUILD_ARTIFACTS="true"
OUTPUT_DIR="./output/current"
LOG_DIR="./logs"

# Build Options
VERBOSE_BUILD="false"
CLEAN_BEFORE_BUILD="false"
UPDATE_SOURCE="true"

# Custom Package Support (future)
CUSTOM_PACKAGES_DIR="./packages/custom"
INCLUDE_CUSTOM_PACKAGES="false"