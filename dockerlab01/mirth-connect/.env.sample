# Mirth Connect Configuration Template
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE=postgres
DATABASE_URL=jdbc:postgresql://database:5432/mirthdb
DATABASE_USERNAME=mirthuser
DATABASE_PASSWORD=your_secure_database_password
DATABASE_MAX_CONNECTIONS=20

# Keystore Configuration
KEYSTORE_STOREPASS=your_keystore_password
KEYSTORE_KEYPASS=your_key_password

# JVM Configuration
VMOPTIONS=-Xmx512m

# PostgreSQL Database Configuration
POSTGRES_DB=mirthdb
POSTGRES_USER=mirthuser
POSTGRES_PASSWORD=your_secure_database_password