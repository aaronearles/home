# SSLTrack Application Configuration
# Copy this file to .env and customize values for your environment

# Application Settings
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:80

# Database Configuration
# SSLTrack uses SQLite by default (stored in /app/data/ssltrack.db)
# Leave these as-is for SQLite, or configure for SQL Server/PostgreSQL if needed

# SMTP Configuration for Email Alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=ssltrack@example.com
SMTP_FROM_NAME=SSLTrack

# Application Settings
APP_TITLE=SSL Track
APP_TIMEZONE=America/Chicago

# Security
# Set a strong password for the application (if authentication is configured)
ADMIN_PASSWORD=changeme123!

# Logging
LOG_LEVEL=Information

# Certificate Check Interval (in hours)
CHECK_INTERVAL=24

# Alert Threshold (days before expiry to alert)
ALERT_THRESHOLD=30

# Enable/Disable Features
ENABLE_EMAIL_ALERTS=true
ENABLE_SLACK_ALERTS=false

# Optional: Slack Integration
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Optional: Additional Settings
# Add any additional configuration options as needed
